<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="OpenESP"
                location="startMenu"/>
  <shortcut
    name="Start OpenESP"
    target="$INSTALL_PATH\tomcat\bin\startup.bat"
    commandLine=""
    workingDirectory="$INSTALL_PATH\tomcat\bin"
    programGroup="yes"
    startMenu="yes">
  </shortcut>
  <shortcut name="Uninstall OpenESP"
    target="$INSTALL_PATH\Uninstaller\uninstall.bat"
    commandLine=""
    workingDirectory="$INSTALL_PATH\Uninstaller"
    description="OpenESP uninstaller"
    initialState="normal"
    programGroup="yes"
    startMenu="yes">
    <createForPack name="OpenESP" />
  </shortcut>
  <shortcut
    name="OpenESP Admin Guide"
    target="$INSTALL_PATH\doc\OpenESP admin guide.pdf"
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    programGroup="yes"
    startMenu="yes">
  </shortcut>
</shortcuts>